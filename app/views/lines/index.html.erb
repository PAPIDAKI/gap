<h1>Listing lines</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pmu</th>
      <th>Substance</th>
      <th>Quantity</th>
      <th>Reasoning</th>
      <th>Operator</th>
      <th>Tech advisor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.date %></td>
        <td><%= line.pmu.location %></td>
        <td><%= line.sub.name %></td>
        <td><%= line.quantity %></td>
        <td><%= line.reasoning %></td>
        <td><%= line.operator %></td>
        <td><%= line.tech_advisor %></td>
        <td><%= link_to 'Show', line %></td>
        <td><%= link_to 'Edit', edit_line_path(line) %></td>
        <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

