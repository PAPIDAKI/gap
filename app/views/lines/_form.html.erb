  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :reasoning %>
    <%= f.text_field :reasoning %>
  </div>
  <div class="field">
    <%= f.label :operator %>
    <%= f.text_field :operator %>
  </div>
  <div class="field">
    <%= f.label :tech_advisor %>
    <%= f.text_field :tech_advisor %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
