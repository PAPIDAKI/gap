<%= will_paginate @clitems %>

<h1>Listing clitems</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>     
      <th>Control point</th>
      <th>Compliance criteria</th>
      <th>Level</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clitems.each do |clitem| %>
      <tr>
        <td><%= clitem.number %></td>
        <td><%= clitem.control_point %></td>
        <td><%= clitem.compliance_criteria %></td>
        <td><%=clitem.level %></td>
        <td><%= link_to 'Show', clitem %></td>
        <td><%= link_to 'Edit', edit_clitem_path(clitem) %></td>
        <td><%= link_to 'Destroy', clitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @clitems %>

<br>

<%= link_to 'New Clitem', new_clitem_path %>

<h5>Import Checklist in csv format</h5>
<%=form_tag import_clitems_path,multipart: true do%>
<%=file_field_tag :file%>
<%=submit_tag "Import csv"%>
<% end %>

